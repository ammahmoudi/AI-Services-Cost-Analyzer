# Production Environment Configuration
# Copy this to .env and fill in your actual values

# External PostgreSQL Database (REQUIRED for production)
# Replace with your actual database connection string
# Examples:
# - Managed PostgreSQL: postgresql://user:password@db.provider.com:5432/dbname
# - Railway: Will be auto-provided as DATABASE_URL
# - Render: Will be auto-provided as DATABASE_URL
# - DigitalOcean: postgresql://user:password@db-cluster.ondigitalocean.com:25060/db
DATABASE_URL=postgresql://username:password@your-db-host:5432/your-database-name

# Flask Secret Key (REQUIRED - generate a random string)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=your-secret-key-here

# Cache Backend (optional, defaults to database)
CACHE_BACKEND=database

# Flask Environment (optional, defaults to production)
FLASK_ENV=production

# Optional: API Keys for extractors
# OPENAI_API_KEY=sk-...
# TOGETHER_API_KEY=...
